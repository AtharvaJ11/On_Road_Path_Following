<launch>

  <arg name="map_file" default="$(find tv_localization)/map/map.yaml"/>
  <node name="uwb_odom" pkg="tv_localization" type="uwb_pub.py" />
  <node name="uwb_low_pass" pkg="tv_localization" type="uwb_low-pass.py" />

  <node name="controller" pkg="tv_control" type="controller.py" />
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <node name="drive_joystick" pkg="tv_control" type="drive_joystick.py" />
  <node name="throttle_controller" pkg="tv_control" type="throttle_controller.py" />


  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find tv_localization)/rviz/config.rviz" />


</launch>